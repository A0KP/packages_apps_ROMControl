<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:aokp="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView">

    <LinearLayout
            style="@style/settingsFragmentStyle">

        <com.aokp.romcontrol.widgets.DeveloperPreference
                aokp:nameDev="CarbonROM"
                aokp:twitterHandle="Carbon_ROM"
                aokp:githubLink="@string/github_carbon"
                aokp:donateLink="@string/donate_carbon"
                aokp:emailDev="github@carbonrom.org"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        <com.aokp.romcontrol.settings.UrlSetting
                android:id="@+id/carbon"
                android:title="@string/carbon_website_title"
                android:summary="@string/carbon_website_summary"
                aokp:url="@string/url_carbon"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        <com.aokp.romcontrol.settings.UrlSetting
                android:id="@+id/carbon_review"
                android:title="@string/carbon_review_title"
                android:summary="@string/carbon_review_summary"
                aokp:url="@string/url_carbon_gerrit"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        <com.aokp.romcontrol.settings.UrlSetting
                android:id="@+id/carbon_irc"
                android:title="@string/carbon_irc_title"
                android:summary="@string/carbon_irc_summary"
                aokp:url="@string/url_carbon_irc"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        <com.aokp.romcontrol.settings.UrlSetting
                android:id="@+id/carbon_mgerrit_changelog"
                android:title="@string/mgerrit_changelog_title"
                android:summary="@string/mgerrit_changelog_summary"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

    </LinearLayout>
</ScrollView>
